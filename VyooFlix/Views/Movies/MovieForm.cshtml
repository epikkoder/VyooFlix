@model VyooFlix.ViewModels.MovieFormViewModel
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
	@Html.HiddenFor(m => m.Movie.Id)

	<div class="form-group">
		@Html.LabelFor(m => m.Movie.Name, new { @class = "control-label" })
		@Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Movie.ReleaseDate, new { @class = "control-label" })
		@Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:MM/dd/yyyy}", new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Movie.GenreId, new { @class = "control-label" })
		@Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Movie.NumInStock, new { @class = "control-label" })
		@Html.TextBoxFor(m => m.Movie.NumInStock, new { @class = "form-control" })
	</div>

	<button type="submit" class="btn btn-primary">Save</button>
}