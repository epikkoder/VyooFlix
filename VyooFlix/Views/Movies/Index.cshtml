@model List<VyooFlix.Models.Movie>
@{
	ViewBag.Title = "Movies";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count > 0)
{
	<table class="table">
		<thead>
			<tr>
				<th>Movie</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var movie in Model)
			{
				<tr>
					<td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<text>We don't have any movies yet.</text>
}